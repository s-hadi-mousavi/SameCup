<%= form_for @sticker, :url => project_sprint_sticker_path(@project, @sprint, @sticker), :remote => true, :class => "edit-form-#{@sticker.id}" do |f| %>
  <%= f.text_area :description, :class => "description-#{@sticker.id}" %>
<% end %>
<%=  link_to '', project_sprint_sticker_path(@project, @sprint, @sticker), :remote => true, :method => :delete, :class => 'delete', :confirm => "Are you sure?" %>

<script type="text/javascript" charset="utf-8">
  $('.description-<%= @sticker.id -%>').keypress(function(event) {
    if (event.keyCode == '13' && event.shiftKey == true) {
       event.preventDefault();
       $('#edit_sticker_<%= @sticker.id -%>').submit();
     }
  });
  
  $('.description-<%= @sticker.id -%>').blur(function(event){
    $('#edit_sticker_<%= @sticker.id -%>').submit();
  })
</script>