<div class="form" style="margin-left: auto; margin-right: auto;width: 300px;padding: 40px; padding-top: 20px;">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<% resource.name = params[:name] if params.has_key?(:name)%>
<% resource.email = params[:email] if params.has_key?(:email)%>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>

  <p><%= f.label :email %>
  <%= f.text_field :email %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></p>
  <div style="font-size: 10px; color: #ccc">
  	By clicking the "Sign Up" button below, I certify that I have read and agree to the SameCup <%= link_to "Terms of Use", termsofuse_path(), :target=>'_blank'%>,
      <%= link_to "Privacy Policy", privacypolicy_path(), :target => '_blank'%>, and to create account at the SameCup Webservice.
  </div>
  <p><%= f.submit "Sign up" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>